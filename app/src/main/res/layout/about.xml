<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/cardview_light_background"
android:weightSum="1">
    <ImageView
        android:layout_width="271dp"
        android:layout_height="271dp"
        android:id="@+id/aboutPic"
        android:layout_gravity="center_horizontal"
        android:paddingTop="12dp"
        android:src="@drawable/ic_launcher_min"
        android:contentDescription="about image"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Tigon Studios"
        android:id="@+id/textView"
        android:padding="16dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"

        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_below="@+id/aboutPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disclaimer-All the images used in this app belongs to their respective owners."
        android:id="@+id/textView4"
        android:textSize="13sp"
        android:paddingLeft="8dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact me-tigonstudios1@gmail.com"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:fontFamily="cursive"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note-This application requires an active internet connection."
        android:id="@+id/textView5"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:layout_below="@+id/textView3"

        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>